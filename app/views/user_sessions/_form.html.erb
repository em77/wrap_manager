<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, "", class: "login-fields" %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, "", class: "login-fields" %>
  </div>
  <br>
  <div class="field form-group">
    <%= label_tag :remember_me %><br>
    <%= check_box_tag :remember, params[:remember], true,
      class: "form-horizontal" %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in", class: "btn btn-primary", id: "sign_in_submit" %>
  </div>
<% end %>
