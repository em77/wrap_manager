<div class="css_cell">
  <%=
  link_to "#{appointment.client.first_name + " " + appointment.client.last_name}",
  client_path(appointment.client) %>
</div>
<div class="css_cell">
  <%= appointment.start %>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Edit appointment",
      edit_appointment_path(appointment, client_id: appointment.client.id),
      class: "btn btn-info") %>
  </div>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Delete appointment", appointment_path(appointment),
      data: { :confirm => "Are you sure you want to delete this appointment?" },
      method: :delete, class: "btn btn-danger delete-appointment") %>
  </div>
</div>
