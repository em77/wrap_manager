<table class="table table-responsive client_box">
  <tbody>
    <div class="bg-info table-row box_header">
      <h4><strong>Assigned to Me</strong></h4>
    </div>
    <% assigned_clients.each do |assigned_client| %>
      <tr>
        <%= render partial: "assigned_row",
          locals: {client: assigned_client} %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
  <%= will_paginate assigned_clients, renderer: BootstrapPagination::Rails %>
</div>
