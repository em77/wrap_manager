<tr class="table-row center">
  <td>
    <h4>
      <%= link_to "#{client.last_name}, #{client.first_name}",
        client_path(client) %>
    </h4>
  </td>

  <td>
    <h4>
      <%= client.updated_at.strftime("%m/%d/%Y") %>
    </h4>
  </td>

  <td>
    <div class="table-cell">
      <div class="btn-group">
        <%= link_to("New appointment",
          new_appointment_path(client_id: client.id),
          class: "btn btn-primary") %>
      </div>
    </div>
  </td>

  <td>
    <div class="table-cell">
      <div class="btn-group">
        <%= link_to "New Action",
          new_client_action_path(client, client_id: client.id),
          class: "btn btn-success", id: "new_client_action_button",
          method: :get %>
      </div>
    </div>
  </td>

  <td>
    <%= link_to("", remove_user_from_client_path(client_id: client.id),
      data: { :confirm => "Are you sure you want to unassign" +
        " #{client.first_name + " " + client.last_name}" +
        " from yourself?" },
      class: "btn btn-default glyphicon glyphicon-remove",
      title: "Unassign this client") %>
  </td>
</tr>
