<div class="css_cell">
  <%= link_to client.name, client %>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("New appointment", new_appointment_path(client_id: client.id),
      class: "btn btn-success") %>
  </div>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Edit client", edit_client_path(client),
      class: "btn btn-info") %>
  </div>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Delete client", client_path(client),
      data: { :confirm => "Are you sure you want to delete this client?" },
      method: :delete, class: "btn btn-danger delete-client") %>
  </div>
</div>
