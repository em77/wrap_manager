<% provide(:title, "Client Management") %>

<table class="table table-responsive client_box">
  <tbody>
    <div class="bg-info table-row box_header">
      <h4><strong>All Clients</strong></h4>
    </div>
    <% clients.each do |client| %>
      <%= render partial: "client", locals: {client: client} %>
    <% end %>
  </tbody>
</table>

<div class="center">
  <%= will_paginate clients %>
</div>
