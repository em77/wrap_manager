<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> | WRAP Manager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
      (function() {
        function initializeFlatpickr() {
          if (typeof window.flatpickr !== 'function') {
            setTimeout(initializeFlatpickr, 50);
            return;
          }
          
          var elements = document.querySelectorAll(".datetimepicker");
          
          for (var i = 0; i < elements.length; i++) {
            var element = elements[i];
            
            if (element._flatpickr) {
              continue;
            }
            
            try {
              window.flatpickr(element, {
                enableTime: true,
                dateFormat: "Y-m-d h:i K",
                time_24hr: false,
                minuteIncrement: 15,
                allowInput: true,
                defaultHour: 12,
                defaultMinute: 0
              });
            } catch (e) {
              console.error("Flatpickr initialization error:", e);
            }
          }
        }
        
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initializeFlatpickr);
        } else {
          initializeFlatpickr();
        }
        
        document.addEventListener('turbolinks:load', initializeFlatpickr);
        window.addEventListener('load', initializeFlatpickr);
      })();
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  </head>

  <body>
    <%= render 'layouts/header' %>

    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key.to_sym) %>">
        <%= sanitize(value) %>
      </div>
    <% end %>

    <%= yield %>
    
  </body>
</html>
