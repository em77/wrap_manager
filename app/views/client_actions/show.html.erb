<% provide(:title, "Action") %>

<div class="panel panel-primary client-action-panel">
  <div class="panel-heading">
    Notes
  </div>
  <div class="panel-body">
    <%= client_action.notes %>
  </div>
</div>

<div class="panel panel-warning client-action-panel">
  <div class="panel-heading">
    WRAP session?
  </div>
  <div class="panel-body">
    <%= wrap_session_prettified(client_action.wrap_session) %>
  </div>
</div>

<div class="panel panel-danger client-action-panel">
  <div class="panel-heading">
    WRAP Status Changed
  </div>
  <div class="panel-body">
    <%= client_wrap_action_prettified %>
  </div>
</div>

<div class="panel panel-info client-action-panel">
  <div class="panel-heading">
    Peer Specialist Info
  </div>
  <div class="panel-body">
    <p>
      <strong>Created by:</strong> <%= client_action.user_name %>
    </p>

    <p>
      <strong>Created at:</strong> <%= client_action.created_at.strftime(
        "%m/%d/%Y, %l:%M %p") %>
    </p>

    <p>
      <strong>Last updated at:</strong> <%= client_action.updated_at.strftime(
        "%m/%d/%Y, %l:%M %p") %>
    </p>
  </div>
</div>

<%= link_to client_path(client_action.client_id),
  class: "btn btn-primary back-button" do %>
  <span class="glyphicon glyphicon-chevron-left"></span> Back to Client
<% end %>
